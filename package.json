{
	"name": "study-tracker",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"doctor": "node scripts/doctor.mjs",
		"dev": "npm run doctor && npm run db:migrate:up && vite dev",
		"build": "npm run doctor && vite build",
		"preview": "npm run doctor && npm run db:migrate:up && vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "npm run doctor && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npm run doctor && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:seed": "vite-node src/lib/server/seed.ts",
		"db:migrate:up": "tsx src/lib/server/db/migrate.ts --latest",
		"db:migrate:down": "tsx src/lib/server/db/migrate.ts --rollback",
		"db:migrate:reset": "tsx src/lib/server/db/migrate.ts --reset"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/pg": "^8.15.5",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.0.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"lucia": "^3.2.2",
		"postcss": "^8.5.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"sass-embedded": "^1.89.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.20.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vite-node": "^3.2.4"
	},
	"dependencies": {
		"@lucia-auth/adapter-postgresql": "^3.1.2",
		"kysely": "^0.28.2",
		"node-vibrant": "^4.0.3",
		"oslo": "^1.2.1",
		"pg": "^8.16.3"
	}
}
